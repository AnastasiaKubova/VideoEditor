<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/bottomMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_menu_size"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/add_text_effect"
            android:layout_width="@dimen/menu_bottom_effect_image_size"
            android:layout_height="@dimen/menu_bottom_effect_image_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/text" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>