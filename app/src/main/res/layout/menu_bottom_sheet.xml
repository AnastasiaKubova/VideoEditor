<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/menu_bottom_sheet"
        style="@style/menuTextTitleStyle"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/menu_bottom_sheet_text_size"
        android:text="@string/menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/menu_separator"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_bottom_sheet" />

    <TextView
        android:id="@+id/select_video"
        style="@style/menuTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bottom_sheet_text_size"
        android:text="@string/select_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_separator" />

    <TextView
        android:id="@+id/create_video"
        style="@style/menuTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bottom_sheet_text_size"
        android:text="@string/create_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_video" />

    <TextView
        android:id="@+id/save_video"
        style="@style/menuTextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bottom_sheet_text_size"
        android:text="@string/save_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_video" />

</androidx.constraintlayout.widget.ConstraintLayout>